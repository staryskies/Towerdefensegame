{
  "name": "tower-defense-game",
  "version": "1.0.0",
  "description": "A multiplayer tower defense game with party support",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "echo \"No tests specified\" && exit 0",
    "lint": "eslint .",
    "format": "prettier --write .",
    "db:init": "psql -U postgres -f init.sql",
    "deploy": "npm install && npm start"
  },
  "engines": {
    "node": "18.x"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/tower-defense-game.git"
  },
  "author": "Your Name",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yourusername/tower-defense-game/issues"
  },
  "homepage": "https://github.com/yourusername/tower-defense-game#readme",
  "eslintConfig": {
    "env": {
      "node": true,
      "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "warn",
      "indent": ["error", 2],
      "quotes": ["error", "single"],
      "semi": ["error", "always"]
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "tabWidth": 2
  }
}